<!DOCTYPE html>
<html>
<head>
	<title>User List</title>
</head>
<body>
	<div>
			<h2>User List</h2> 		
	</div>

	<a href="/home">Back</a>|
	<a href="/home/view_users">Refresh</a>|
	<a href="/logout">Logout</a><br>

	<form method="POST">
		Search : <input type="text" placeholder="Search By ID" value=" " name="id">
				 <input type="submit" value="Search" name="search"> 			
	</form>
	
	<br>

	<table border="1">
		<tr>
            <td>ID</td>
            <td>Name</td>
            <td>Email</td>
            <td>Contact</td>
			<td>USERNAME</td>
			<td>PASSWORD</td>
			<td>TYPE</td>
			<td>ACTION</td>
		</tr>
	<% for(var i=0; i < userlist.length; i++){ %>
		<tr>
            <td><%= userlist[i].id %></td>
            <td><%= userlist[i].name %></td>
            <td><%= userlist[i].email %></td>
            <td><%= userlist[i].phone %></td>
    
			<td><%= userlist[i].username %></td>
			<td><%= userlist[i].password %></td>
			<td><%= userlist[i].type %></td>
			<td>
				<a href="/home/edit/<%= userlist[i].id %>">EDIT</a> | 
				<a href="/home/delete/<%= userlist[i].id %>">DELETE</a> 
			</td>
		</tr>
	<%  } %>
	</table>

</body>
</html>